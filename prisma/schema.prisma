generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../docs/erd.md"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  OWNER
  ADMIN
  MEMBER
}

model User {
  uuid     String @id @default(uuid()) @db.Uuid
  password String

  profile     String?
  picture     String?
  name        String
  email       String  @unique
  studentId   String  @map("student_id")
  phoneNumber String  @map("phone_number") @db.VarChar(30)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  verifiedId      Boolean @default(false)
  verifiedNumber  Boolean @default(false)

  memberships    UserClientRelation[] //role-aware
  consent        Consent[]
  RefreshToken   RefreshToken[]
  authenticators Authenticator[]

  @@map("user")
}

model Client {
  uuid   String @id @default(uuid()) @db.Uuid
  secret String

  name              String
  picture           String?
  urls              String[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deleteRequestedAt DateTime? @map("delete_requested_at")

  idTokenAllowed Boolean  @default(false)
  scopes         String[]
  optionalScopes String[] @map("optional_scopes")

  userLinks    UserClientRelation[] //role-aware
  consent      Consent[]
  RefreshToken RefreshToken[]

  @@map("client")
}

model UserClientRelation {
  userUuid   String @db.Uuid
  clientUuid String @db.Uuid

  user   User   @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)
  client Client @relation(fields: [clientUuid], references: [uuid], onDelete: Cascade)

  role RoleType @default(MEMBER)

  @@id([userUuid, clientUuid])
  @@map("user_client_relations")
}

model RefreshToken {
  token     String   @id
  createdAt DateTime @default(now())
  expiresAt DateTime
  nonce     String?  @db.VarChar(255)
  scopes    String[]

  clientUuid String @db.Uuid
  userUuid   String @db.Uuid

  client Client @relation(fields: [clientUuid], references: [uuid], onDelete: Cascade)
  user   User   @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)

  @@map("refresh_token")
}

model Consent {
  clientUuid String   @db.Uuid
  userUuid   String   @db.Uuid
  scopes     String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  client Client @relation(fields: [clientUuid], references: [uuid], onDelete: Cascade)
  user   User   @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)

  @@id([clientUuid, userUuid])
  @@map("consent")
}

model Authenticator {
  id            String  @id
  name          String
  icon          String?
  publicKey     Bytes   @map("public_key")
  counter       Int
  userUuid      String  @db.Uuid @map("user_uuid")
  createdAt     DateTime  @default(now()) @map("created_at")
  loginAt       DateTime? @map("login_at")

  user User @relation(fields: [userUuid], references: [uuid], onDelete: Cascade)

  @@map("authenticator")
}
